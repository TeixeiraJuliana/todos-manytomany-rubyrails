<div class="content">
  <p id="notice"><%= notice %></p>
  <h1>Tarefas cadastradas</h1>
  <div class="table">
    <div class="table-row">
      <div class="table-head">
        <div class="table-rows">
          <div>Título</div>
          <div>Descrição</div>
          <div>Lista</div>
          <div>Ações</div>
        </div>
      </div>
      <div>
          <% @tasks.each do |task| %>
        <div class="table-body">
            <div class="table-rows">
              <div><%= task.title %></div>
              <div><%= task.description %></div>
              <div><%= task.themes_id %></div>
              <div class="table-options">
                <div><%= link_to image_tag("options.png", :alt => "rss feed"), task %> </div>
                <div><%= link_to  image_tag("update.png", :alt => "rss feed"), edit_task_path(task) %></div>
                <div><%= link_to  image_tag("trash.png", :alt => "rss feed"), task, method: :delete, data: { confirm: 'Are you sure?' } %></div>
              </div>
            </div>
          </div>
          <% end %>
      </div>
    </div>
  </div>
  <br>
  <%= link_to 'New Task', new_task_path %>
</div>
